                            @*<h5 class="card-subtitle mb-3">Bill Acceptor</h5>*@
                            <p class="card-text">
                                Click here for product lineup related to money handling.
                            </p>
                            <span class="nav-item">@Html.ActionLink("Check out!", "Products", "Details", null, new { @class = "btn btn-info" })</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div id="service" class="card border-0 h-100">
                        <a href="@Url.Action("Service", "Details")"><img class="card-img" src="~/Images/service.jpg" /></a>
                        
                        <div class="card-body">
                            <h3 class="card-title color-jcm-blue mb-3">Service</h3>
                            @*<h5 class="card-subtitle mb-3">Professional Team Service </h5>*@
                            <p class="card-text">
                                Contact for inquiries related to our products.
                            </p>
                            <span class="nav-item">@Html.ActionLink("See more", "Service", "Details", null, new { @class = "btn btn-info" })</span>
                        </div>
