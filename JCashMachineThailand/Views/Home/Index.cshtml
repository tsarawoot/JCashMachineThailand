@model JCashMachineThailand.Models.ModelContactEmail
@{
    ViewBag.Title = "Welcome";
}
<section id="indexBody">
    <!-- parallax baground-->
    <div id="bg-parallax" class="background-parallax">
        <div class="container headerBox">
            <h1 id="company-name" class="headerText color-jcm-blue">
                J-Cash Machine (Thailand)<br />
                <span class="subHeaderText">A Global Solutions by JCM</span>
            </h1>
        </div>
    </div>

    <!--################-->
    <div class="container-fluid text-center bg-jcm-blue">
        <!-- Compary Introduction Section -->
        <section id="introduce">
            <div class="container-fluid text-white">
                <h1 id="whoweare" class="font-smoothing" style="font-weight:bold">Who We Are?</h1>
                <p class="p-15 p-3">
                    J-Cash Machine (Thailand) Co., LTD has developed software for various products related to
                    money handling as a subsidiary of Japan Cash Machine Co., LTD in Bangkok Thailand since 2007.
                    As an expert in money handling, we provide software to validate notes around the world
                    as well as our products for a wide range of markets.
                </p>
                <span class="nav-item mt-2">@Html.ActionLink("About us", "About", "Home", null, new { @class = "btn btn-info" })</span>
            </div>
