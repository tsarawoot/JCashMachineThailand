                        @Html.AntiForgeryToken()
                    <div class="form-group mx-xl-5 pt-3">
                        <div class="form-row justify-content-center">
                            <div class="col-md">
                                @Html.TextBoxFor(m => m.FromName, new { @class = "form-control mb-2 max-width-768px btn-outline-dark", placeholder = Html.DisplayNameFor(m => m.FromName) })
                                @Html.ValidationMessageFor(m => m.FromName)
                            </div>
                            <div class="col-md">
                                @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control mb-2 max-width-768px btn-outline-dark", placeholder = Html.DisplayNameFor(m => m.FromEmail) })
                                @Html.ValidationMessageFor(m => m.FromEmail)
                            </div>
                        </div>
                        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control mb-2 max-width-768px btn-outline-dark", placeholder = Html.DisplayNameFor(m => m.PhoneNumber) })
                        @Html.ValidationMessageFor(m => m.PhoneNumber)
                        @Html.TextBoxFor(m => m.Subject, new { @class = "form-control mb-2 max-width-768px btn-outline-dark", placeholder = Html.DisplayNameFor(m => m.Subject) })
                        @Html.ValidationMessageFor(m => m.Subject)
                        @Html.TextAreaFor(m => m.Message, new { @class = "form-control mb-3 max-width-768px btn-outline-dark", @rows = 3, placeholder = Html.DisplayNameFor(m => m.Message) })
                        @Html.ValidationMessageFor(m => m.Message)
                        <br />
                        <p>
                            Please answer below <br />
                            What is the total of <b>@System.Web.HttpContext.Current.Session["valA"]</b> and <b>@System.Web.HttpContext.Current.Session["valB"]</b>?
                        </p>
                        @Html.TextBoxFor(m => m.AnswerBot, new { @class = "form-control mb-2 max-width-768px btn-outline-dark", placeholder = "Please fill answer number" })
                        @Html.ValidationMessageFor(m => m.AnswerBot)
                        <br />
                        <button type="submit" class="btn-dark w-100">Send</button>
                    </div>
                    }
                </div>
            </div>
            @*<div id="mapArea" class="row p-0 m-0 bg-secondary w-100" style="height:400px; word-break:break-all  ">
                <p>JCM-T google map</p>
